extends layout.pug

include utils.pug
include task-detail.pug
block content
  div(class='top-display')
    div(class='first-box')
      +validationErrorSummary(errors)
      div(class='create-task')
        include task-create-form
  div(class='main-display')
    div(class="second-box")

    div(class='third-box')
     div(class='display-tasks')
        p(class='column-titles') To Do:
        ul
          each task in tasks
            div(id=`list-item-${task.id}` class='list-item')
              div
                li(class='tasks' id=`task-${task.id}`)= task.content
              div(class='done-check')
                label(class='done-label') done?
                input(type='checkbox' name='completed' class='checkbox')
            +editField(task)
    div(class='fourth-box')
